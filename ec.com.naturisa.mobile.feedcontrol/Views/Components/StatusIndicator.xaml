<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ec.com.naturisa.mobile.feedcontrol.Views.Components.StatusIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="StatusIndicatorControl">
    <HorizontalStackLayout HorizontalOptions="End" Spacing="6">
        <BoxView
            BackgroundColor="{Binding Source={x:Reference StatusIndicatorControl}, Path=StatusColor}"
            CornerRadius="5"
            HeightRequest="10"
            WidthRequest="10" />
        <Label
            FontAttributes="None"
            Style="{StaticResource RegularLabel}"
            Text="{Binding Source={x:Reference StatusIndicatorControl}, Path=StatusText}"
            TextColor="{Binding Source={x:Reference StatusIndicatorControl}, Path=StatusColor}"
            VerticalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>