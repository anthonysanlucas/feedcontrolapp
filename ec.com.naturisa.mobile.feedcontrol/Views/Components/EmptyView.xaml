<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ec.com.naturisa.mobile.feedcontrol.Views.Components.EmptyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ec.com.naturisa.mobile.feedcontrol.Models">
    <VerticalStackLayout HorizontalOptions="CenterAndExpand">
        <Label
            FontSize="32"
            HorizontalOptions="Center"
            Style="{StaticResource GoogleFont}"
            Text="{x:Static models:IconFont.Search}"
            TextColor="{StaticResource OnSecondary}"
            VerticalOptions="Center" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding Text}"
            TextColor="{StaticResource OnSecondary}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentView>
